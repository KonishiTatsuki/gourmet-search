generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Place {
  id        String   @id @default(cuid())
  name      String
  station   String?
  area      String?
  address   String?
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id           String   @id @default(cuid())
  placeId      String
  title        String
  heroImageUrl String?
  createdAt    DateTime @default(now())
  content      String?
  place        Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)
}
